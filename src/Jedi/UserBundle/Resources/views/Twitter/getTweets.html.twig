{% extends 'UserBundle::header.html.twig' %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class=" col-md-offset-4 col-md-4">
                <h1>Your Tweets</h1>
                <ul class="list-group">
                    {% for status in statuses %}
                        <li class="list-group-item">{{ status.text }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/viewTweets.js') }}"></script>
{% endblock %}