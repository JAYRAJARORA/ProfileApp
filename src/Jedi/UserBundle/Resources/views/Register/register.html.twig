{% extends 'UserBundle::header.html.twig' %}
{% block title %}Register{% endblock %}
{% form_theme form 'UserBundle:Register:fields.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class=" col-md-offset-4 col-md-4">
                <h2>Sign Up</h2>
                {%- if has_error -%}
                    <div class="alert alert-danger fade in">
                        {{ has_error }}
                    </div>
                {%- endif -%}
                <form action="{{ path('user_register') }}" method="POST" novalidate="novalidate">
                    {{ form_row(
                    form._username,{
                        'id' : 'username'
                    }) }}
                    {{ form_row(
                    form._firstname,{
                        'id' : 'firstname'
                    }) }}
                    {{ form_row(
                    form._lastname,{
                        'id' : 'lastname'
                    }) }}
                    {{ form_row(form._email,{
                        'id'  : 'email'
                    }) }}
                    {{ form_row(
                    form._gender,{
                        'label' : 'Gender',
                        'id' : 'gender',
                    }
                    ) }}
                    {{ form_row(
                    form._address,{
                        'label' : 'Address',
                        'id' : 'address'
                    }
                    ) }}


                    {{ form_row(form._plainPassword.first,{
                        'label' : 'Password',
                        'id'  : 'password'
                    }) }}
                    {{ form_row(
                    form._plainPassword.second,{
                        'label': 'Repeat Password',
                        'id'  : 'password_check'
                    }) }}

                    {{ form_rest(form) }}
                    <button type="submit" class="btn btn-default btn-primary"
                            name="register_button" id="submit">Submit</button>
                    <a href="{{ path('login_form') }}">Already Registered</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/register.js') }}"></script>
{% endblock %}